<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color_edit"
                android:gravity="bottom"
                android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_title"
        android:textSize="22sp"
        android:text="Title:"
        android:layout_marginTop="60dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_title"
        android:textSize="27sp"
        android:hint="@string/title_edit_hint"
        android:singleLine="true"
        android:layout_toRightOf="@+id/label_title"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prority:"
        android:id="@+id/label_priority"
        android:textSize="22sp"
        android:layout_below="@+id/label_title"
        android:layout_marginTop="40dp"/>

    <Spinner
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/priority_spinner"
        android:layout_toRightOf="@+id/label_priority"
        android:layout_below="@+id/label_title"
        android:background="@drawable/button_color_transparent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_date"
        android:textSize="22sp"
        android:layout_below="@+id/label_priority"
        android:text="Due:"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/button_date"
        android:textSize="20sp"
        android:background="@drawable/button_color_transparent"
        android:elevation="1dp"
        android:layout_below="@+id/label_priority"
        android:layout_toRightOf="@+id/label_date"
        android:text="@string/label_set_date"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/button_time"
        android:textSize="20sp"
        android:background="@drawable/button_color_transparent"
        android:elevation="1dp"
        android:layout_below="@+id/label_priority"
        android:layout_toRightOf="@+id/button_date"
        android:text="@string/label_set_time"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_alarm"
        android:textSize="22sp"
        android:layout_below="@+id/label_date"
        android:text="Alarm:"
        android:layout_marginTop="40dp"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/alarm_spinner"
        android:background="@drawable/button_color_transparent"
        android:layout_below="@+id/label_date"
        android:layout_toRightOf="@+id/label_alarm"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_before"
        android:textSize="22sp"
        android:layout_below="@+id/label_date"
        android:text="before"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/alarm_spinner"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/label_alarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/edit_note"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:hint="note\n"/>

            <!--
            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_below="@+id/edit_note"
                android:spinnersShown="true"
                android:datePickerMode="spinner"
                android:layout_marginTop="10dp"/>
            -->
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:id="@+id/button_save"
        android:src="@drawable/ic_save_white_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        />
        <!--android:elevation="@dimen/elevation_low"
        android:stateListAnimator="@anim/button_elevation" -->



</RelativeLayout>