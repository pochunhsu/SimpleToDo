<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color_edit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_title"
        android:textSize="25sp"
        android:text="Title:"
        android:layout_margin="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_title"
        android:textSize="35sp"
        android:hint="@string/title_edit_hint"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/label_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prority:"
        android:id="@+id/label_priority"
        android:textSize="25dp"
        android:layout_below="@+id/edit_title"
        android:layout_toRightOf="@+id/button_date"
        android:layout_margin="10dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priority_spinner"
        android:layout_toRightOf="@+id/label_priority"
        android:layout_below="@+id/edit_title"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_date"
        android:layout_below="@+id/edit_title"
        android:text="Set Date "
        android:textSize="25dp"
        android:layout_margin="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/button_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/edit_note"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:hint="Enter note here\n\n"/>

            <!--
            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_below="@+id/edit_note"
                android:spinnersShown="true"
                android:datePickerMode="spinner"
                android:layout_marginTop="10dp"/>
            -->
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:id="@+id/button_save"
        android:src="@drawable/ic_save_white_48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        />
        <!--android:elevation="@dimen/elevation_low"
        android:stateListAnimator="@anim/button_elevation" -->



</RelativeLayout>