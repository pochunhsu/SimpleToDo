<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_title"
        android:textSize="35sp"
        android:hint="@string/title_edit_hint"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/edit_title"
        android:layout_above="@+id/button_save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prority:"
                android:id="@+id/label_priority"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priority_spinner"
                android:layout_alignParentStart="false"
                android:layout_toRightOf="@+id/label_priority"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/edit_note"
                android:layout_below="@+id/priority_spinner"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:hint="Enter note here"/>

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_below="@+id/edit_note"
                android:spinnersShown="true"
                android:datePickerMode="spinner"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_save"
        android:src="@drawable/ic_save_white_48dp"
        android:background="@drawable/button_shape"
        android:padding="5dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>